{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "outDir": "dist",        // ðŸ‘ˆ Add this line
    "rootDir": "."           // ðŸ‘ˆ Optional but recommended for predictable builds
  },
  "include": ["server.ts", "routes/**/*.ts", "db/**/*.ts"]
}
