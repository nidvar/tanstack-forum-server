{
  "compilerOptions": {
    "module": "commonjs",          // <-- CommonJS modules
    "target": "ES2020",            // modern JS features
    "types": ["node"],             // <-- include Node types
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true         // <-- makes import/export compatible with require
  },
  "include": ["server.ts", "routes/**/*.ts", "db/**/*.ts"]
}
